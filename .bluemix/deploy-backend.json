{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Sample Deploy Stage",
    "localized-struct":{
        "$ref": "deploy-localized-struct.json"
    },
    "description": "sample toolchain",
    "longDescription": "The Delivery Pipeline automates continuous deployment.",
    "type": "object",
    "properties": {
        "backend-prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "backend-prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
       "backend-prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
       "backend-prod-app-name": {
            "description": "The name of your Backend app",
            "type": "string"
        }
    },
    "required": ["backend-prod-region", "backend-prod-organization", "backend-prod-space", "backend-prod-app-name"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },
        {
          "type": "text",
          "readonly": false,
          "title": "App name",
          "key": "backend-prod-app-name"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },
                {
                  "type": "label",
                  "title": "Region"
                },
                {
                  "type": "label",
                  "title": "Organization"
                },
                {
                  "type": "label",
                  "title": "Space"
                },
                {
                  "type": "label",
                  "title": "Production stage"
                },
                {
                  "type": "select",
                  "key": "backend-prod-region"
                },
                {
                  "type": "select",
                  "key": "backend-prod-organization"
                },
                {
                  "type": "select",
                  "key": "backend-prod-space",
                  "readonly": false
                }
            ]
        }
    ]
}
